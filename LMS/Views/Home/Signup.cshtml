@model LMS.Models.User
@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_SignLayout.cshtml";
}

<link href="~/Content/Signup.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="assets/css/bootstrap.css">
<!-- Website CSS style -->
<link rel="stylesheet" type="text/css" href="assets/css/main.css">
<!-- Website Font style -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<!-- Google Fonts -->
<link href='https://fonts.googleapis.com/css?family=Passion+One' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Oxygen' rel='stylesheet' type='text/css'>

<div class="row main">
    <div class="panel-heading">
        <div class="panel-title text-center">
        </div>
    </div>
    <div class="main-login main-center">
        @using (Html.BeginForm("Signup", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="name" class="cols-sm-2 control-label">Your Name</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(a => a.name)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="cols-sm-2 control-label">Your Email</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(a => a.email)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="cols-sm-2 control-label">Password</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        @Html.PasswordFor(a => a.password)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="confirm" class="cols-sm-2 control-label">Type</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        @Html.TextBoxFor(a => a.type)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="confirm" class="cols-sm-2 control-label">Date</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                        @Html.EditorFor(a => a.DOB)
                    </div>
                </div>
            </div>
            <div class="form-group ">
                <input class="btn btn-primary btn-lg btn-block login-button" type="submit" value="Register" />
            </div>
            <div class="login-register">
                @Html.ActionLink("Login", "Login", "Home")
            </div>
        }
    </div>
</div>