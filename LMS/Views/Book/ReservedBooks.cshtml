@model IEnumerable<LMS.Models.Book>
@{
    ViewBag.Title = "ReservedBooks";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="row" style="z-index:-1">
    
    <div class="col-sm-6">
        <table class="table table-striped custab ">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var d in Model)
            {
                <tr>
                    <td>@d.ID</td>
                    <td>@d.title</td>
                    <td>@d.ISBN</td>
                    <td>@Html.ActionLink("Return Book", "ReturnBook", "Book", new { id = d.ID }, null)</td>
                </tr>

            }
        </table>
    </div>
</div>

