@model LMS.Models.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}




@using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
{
    <table class="table table-striped custab">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>ISBN</th>
            </tr>
        </thead>
        <tr>
            <td>@Model.ID</td>
            <td>@Html.TextBoxFor(a => a.title)</td>
            <td>@Html.TextBoxFor(a => a.ISBN)</td>
            
        </tr>
    </table>
    @Html.LabelFor(a => a.details)
    @Html.TextAreaFor(a => a.details)
    <input type="submit" value="Update" />

}





