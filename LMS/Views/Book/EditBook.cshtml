@model LMS.Models.Book

@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}




<div id="main">
    @using (Html.BeginForm("EditBook", "Book", FormMethod.Post))
    {
        <label>ID : @Model.ID</label> <br />
        @Html.LabelFor(a => a.title)
        @Html.TextBoxFor(a => a.title)
        <br />
        @Html.LabelFor(a => a.ISBN)
        @Html.TextBoxFor(a => a.ISBN)
        <input type="submit" value="Update" />


    }


</div>



