@{
    Layout = null;
}

<table class="table table-striped custab">
    <tr>
        <th>User Name </th>
        <th>Book Name</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var r in ViewBag.Reservations)
            {
        <tr>
            <td>@r.user.UserName</td>
            <td>@r.book.title</td>
            <td>@Html.ActionLink("Accept", "AcceptReserevations", "Book", new { userId = r.user.Id, bookId = r.book.ID }, null)</td>
            <td>@Html.ActionLink("Reject", "RejectReserevations", "Book", new { userId = r.user.Id, bookId = r.book.ID }, null)</td>        
        </tr>

    }

</table>

