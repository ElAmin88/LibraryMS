@model IEnumerable<LMS.Models.User>
@{
    ViewBag.Title = "FriendsView";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section Styles {
    <link href="@Url.Content("~/Content/CSS/BooksView.css")" rel="stylesheet" type="text/css" />
}
@using (Html.BeginForm("FriendsView", "User", FormMethod.Get))
{
    @Html.TextBox("search")
    <input type="submit" name="submit" value="search" />
    
    
}
<table  border="1">
    <tr>
        <th>Name </th>
    </tr>
    <tr></tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.name</td>
            <td>@Html.ActionLink("Add", "AddFriend", "User", new { name = d.name}, null)</td>
        </tr>
    }

</table>
<table style="float:right">
    <tr>
        <th>Name </th>
    </tr>
    @foreach (var user in ViewBag.Friends)
    {
    <tr>
        <td>@user.name</td>
    </tr>
    
    }
    
</table>